@model LicenseManager.Models.License

@{
    ViewData["Title"] = "Create License";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create License</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Type" class="form-label"></label>
                <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<LicenseManager.Models.LicenseType>()">
                    <option value="">-- Select License Type --</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="user@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <small class="form-text text-muted">The license will be linked to this email address.</small>
            </div>

            <div class="mb-3">
                <label asp-for="ExpiresAt" class="form-label">Expiry Date (optional)</label>
                <input asp-for="ExpiresAt" class="form-control" type="date" />
                <span asp-validation-for="ExpiresAt" class="text-danger"></span>
                <small class="form-text text-muted">Leave empty for a non-expiring license.</small>
            </div>

            <div class="mb-3">
                <label asp-for="Notes" class="form-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div>
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
