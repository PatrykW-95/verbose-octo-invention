@model LicenseManager.Models.License

@{
    ViewData["Title"] = "Delete License";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete License</h1>
<hr />
<div class="alert alert-danger">
    <strong>Are you sure you want to delete this license?</strong> This action cannot be undone.
</div>

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">License Key</dt>
            <dd class="col-sm-8"><code>@Model.Key</code></dd>

            <dt class="col-sm-4">Type</dt>
            <dd class="col-sm-8">@Model.Type</dd>

            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">@Model.Status</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
