@model LicenseManager.Models.License

@{
    ViewData["Title"] = "License Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>License Details</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">License Key</dt>
            <dd class="col-sm-8"><code>@Model.Key</code></dd>

            <dt class="col-sm-4">Type</dt>
            <dd class="col-sm-8">
                @if (Model.Type == LicenseManager.Models.LicenseType.Paid)
                {
                    <span class="badge bg-success">Paid</span>
                }
                else
                {
                    <span class="badge bg-secondary">Free</span>
                }
            </dd>

            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">
                @switch (Model.Status)
                {
                    case LicenseManager.Models.LicenseStatus.Active:
                        <span class="badge bg-primary">Active</span>
                        break;
                    case LicenseManager.Models.LicenseStatus.Expired:
                        <span class="badge bg-warning text-dark">Expired</span>
                        break;
                    case LicenseManager.Models.LicenseStatus.Revoked:
                        <span class="badge bg-danger">Revoked</span>
                        break;
                }
            </dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">User</dt>
            <dd class="col-sm-8">@(Model.User?.FullName ?? Model.User?.Email ?? "Not linked")</dd>

            <dt class="col-sm-4">Created</dt>
            <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm") UTC</dd>

            <dt class="col-sm-4">Expires</dt>
            <dd class="col-sm-8">@(Model.ExpiresAt.HasValue ? Model.ExpiresAt.Value.ToString("yyyy-MM-dd") : "Never")</dd>

            <dt class="col-sm-4">Notes</dt>
            <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Notes) ? "â€”" : Model.Notes)</dd>
        </dl>

        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
