@{
    ViewData["Title"] = "Welcome";
}

<div class="text-center mt-5">
    <h1 class="display-4">Welcome to LicenseManager</h1>
    <p class="lead text-muted">Please select how you would like to continue.</p>
</div>

<div class="row justify-content-center mt-4 g-4">
    <div class="col-md-5">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center p-5">
                <h2 class="card-title mb-3">
                    <i class="bi bi-person"></i> User
                </h2>
                <p class="card-text text-muted mb-4">Manage and view your own licenses.</p>
                <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="/MyLicenses"
                   class="btn btn-primary btn-lg w-100 mb-3">Login as User</a>
                <a asp-area="Identity" asp-page="/Account/Register" asp-route-role="User" asp-route-returnUrl="/MyLicenses"
                   class="btn btn-outline-primary btn-lg w-100">Register as User</a>
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center p-5">
                <h2 class="card-title mb-3">
                    <i class="bi bi-shield-lock"></i> Admin
                </h2>
                <p class="card-text text-muted mb-4">Manage all licenses across the system.</p>
                <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="/Admin/Licenses"
                   class="btn btn-danger btn-lg w-100 mb-3">Login as Admin</a>
                <a asp-area="Identity" asp-page="/Account/Register" asp-route-role="Admin" asp-route-returnUrl="/Admin/Licenses"
                   class="btn btn-outline-danger btn-lg w-100">Register as Admin</a>
            </div>
        </div>
    </div>
</div>
